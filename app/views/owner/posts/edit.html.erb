<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">
      <h1> Editer mon annonce </h1>
      <%= simple_form_for([:owner, @post]) do |f| %>
        <%= f.input :title %>
        <%= f.input :category %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
