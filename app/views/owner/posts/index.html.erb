<div class="text-center padded-light">
  <h1> Mes annonces </h1>
</div>

<div class="container">
  <div class="row padded">
    <% @posts.each do |post| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="badge-bordered padded-light rounded bg-card-user text-center">
          <%= cl_image_tag post.photo, height: 280, width: 280, crop: :fill %>
          <div>
            <p><strong><%= post.title %></strong></p>
            <p><%= post.description %></p>
            <%= link_to "Nchouf", owner_post_path(post), class:"btn btn-default" %>
            <%= link_to "Editer", edit_owner_post_path(post), class:"btn btn-default" %>
            <%= link_to "Supprimer", owner_post_path(post), method: :delete, data: {confirm: "Tu veux vraiment la supprimer?"}, class:"btn btn-default" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
