<div class="text-center">
  <h1> Toutes les annonces </h1>
</div>

<div class="container">
  <div class="row padded">
    <% @posts.each do |post| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="badge-bordered padded-light rounded bg-card-user text-center">
          <%= cl_image_tag post.photo, height: 280, width: 280, crop: :fill %>
          <div>
            <p><strong><%= post.title %></strong></p>
            <p><%= post.description %></p>
          </div>
          <div>
            <%= link_to "Nchouf", post_path(post), class:"btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
